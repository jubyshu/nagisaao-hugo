{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <description>{{ .Site.Params.description }}</description>
    <link>{{ .Site.BaseURL }}</link>
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    <lastBuildDate>{{ .Lastmod.Format "02 Jan 2006 15:04:05-0700" }}</lastBuildDate>
    <generator>Hugo {{ hugo.Version }}</generator>
    {{ range first 15 (where .Site.RegularPages "Section" "posts") }}
    <item>
      <title>{{ .Title }}</title>
      <description>{{ .Content | transform.XMLEscape | safeHTML }}</description>
      <author>{{ .Site.Params.author }}</author>
      <pubDate>{{ .Date.Format "02 Jan 2006 15:04:05-0700" }}</pubDate>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      {{ range .Params.tags }}
      <category>{{ . | htmlEscape }}</category>
      {{ end }}
      {{ range .Params.categories }}
      <category>{{ . | htmlEscape }}</category>
      {{ end }}
    </item>
    {{ end }}
    {{ with .Site.Params.follow }}
    <follow_challenge>
      <feedId>{{ .feed_id }}</feedId>
      <userId>{{ .user_id }}</userId>
    </follow_challenge>
    {{ end }}
  </channel>
</rss>
