{{ printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ .Site.Title }}</title>
    <description>{{ .Site.Params.description }}</description>
    <link>{{ .Site.BaseURL }}</link>
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ now.Format "2006-01-02T15:04:05Z07:00" }}</pubDate>
    <lastBuildDate>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</lastBuildDate>
    <generator>Hugo {{ hugo.Version }}</generator>
    {{- range first 15 (where .Site.RegularPages "Type" "posts") }}
    <item>
      <title>{{ .Title }}</title>
      <description>{{ .Summary | htmlEscape }}</description>
      <content:encoded>{{ .Content | transform.XMLEscape | safeHTML }}</content:encoded>
      <author>{{ .Site.Params.author }}</author>
      <pubDate>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</pubDate>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      {{- range .Params.tags }}
      <category>{{ . | htmlEscape }}</category>
      {{- end }}
      {{- range .Params.categories }}
      <category>{{ . | htmlEscape }}</category>
      {{- end }}
    </item>
    {{- end }}
    {{- with .Site.Params.follow }}
    <follow_challenge>
      <feedId>{{ .feed_id }}</feedId>
      <userId>{{ .user_id }}</userId>
    </follow_challenge>
    {{- end }}
  </channel>
</rss>
